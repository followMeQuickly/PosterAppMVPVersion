<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/poster_detail_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/shot_collapsed_app_bar_height"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:transitionName="target"

            />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"

            android:elevation="@dimen/z_fab_over_touchable_app_bar"
            android:layout_gravity="end"
            />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/poster_detail_title"
        android:text="crap"
        />

</LinearLayout>